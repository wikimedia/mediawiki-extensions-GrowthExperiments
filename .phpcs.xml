<?xml version="1.0"?>
<ruleset>
	<rule ref="./vendor/mediawiki/mediawiki-codesniffer/MediaWiki">
		<exclude name="MediaWiki.Commenting.FunctionComment.MissingDocumentationPrivate" />
		<exclude name="MediaWiki.Usage.NullableType.ExplicitNullableTypes" />
	</rule>
	<exclude-pattern type="relative-root">./documentation/frontend/node_modules/*</exclude-pattern>
	<file>.</file>
	<exclude-pattern>.phan/*</exclude-pattern>
	<exclude-pattern>cypress/*</exclude-pattern>
	<arg name="extensions" value="php"/>
	<arg name="encoding" value="UTF-8"/>
</ruleset>
